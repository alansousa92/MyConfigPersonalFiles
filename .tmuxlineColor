# This tmux statusbar config was created by tmuxline.vim
# on ter, 28 jun 2022

set -g status-justify "left"
set -g status "on"
set -g status-left-style "none"
set -g message-command-style "fg=#0F1419,bg=#2D3640"
set -g status-right-style "none"
set -g pane-active-border-style "fg=#B8CC52"
set -g status-style "none,bg=#14191F"
set -g message-style "fg=#0F1419,bg=#2D3640"
set -g pane-border-style "fg=#2D3640"
set -g status-right-length "100"
set -g status-left-length "100"
setw -g window-status-activity-style "none"
setw -g window-status-separator ""
setw -g window-status-style "none,fg=#B8CC52,bg=#14191F"
set -g status-left "#[fg=#0F1419,bg=#B8CC52,none] #S #[fg=#B8CC52,bg=#14191F,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=#2D3640,bg=#14191F,nobold,nounderscore,noitalics]#[fg=#0F1419,bg=#2D3640] %Y-%m-%d | %H:%M #[fg=#B8CC52,bg=#2D3640,nobold,nounderscore,noitalics]#[fg=#0F1419,bg=#B8CC52] #h "
setw -g window-status-format "#[fg=#B8CC52,bg=#14191F,none] #I |#[fg=#B8CC52,bg=#14191F,none] #W "
setw -g window-status-current-format "#[fg=#14191F,bg=#2D3640,nobold,nounderscore,noitalics]#[fg=#0F1419,bg=#2D3640,none] #I |#[fg=#0F1419,bg=#2D3640,none] #W #[fg=#2D3640,bg=#14191F,nobold,nounderscore,noitalics]"
